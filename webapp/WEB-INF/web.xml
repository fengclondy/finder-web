<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4"
    xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>finder-web</display-name>
    <distributable/>

    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.skin.finder.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>com.skin.finder.filter.SessionFilter</filter-class>
        <init-param>
            <param-name>loginUrl</param-name>
            <param-value>/finder?action=finder.login</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>DispatchServlet</servlet-name>
        <servlet-class>com.skin.finder.web.servlet.DispatchServlet</servlet-class>
        <init-param>
            <param-name>packages</param-name>
            <param-value>com.skin.finder.servlet</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>DispatchServlet</servlet-name>
        <url-pattern>/finder</url-pattern>
    </servlet-mapping>

    <!-- welcome file list -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- error page -->
    <error-page>
        <error-code>403</error-code>
        <location>/error/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/error.jsp</location>
    </error-page>
</web-app>
